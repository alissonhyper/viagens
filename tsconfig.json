{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    
    // Configurações cruciais para o Vite e módulos
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true, // Adicionado/Verificado: Necessário para importação de JSON e auxilia na resolução de módulos
    
    // Configurações do React e aliases
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Define a base de importação como 'src'
    "paths": {
      "@/*": 
        ["./*"] // Diz que @/ se refere a qualquer coisa dentro de src
      
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  
  // Inclui a pasta de código e o arquivo de definição de tipos do Vite
  "include": [
    "src", 
    "src/vite-env.d.ts" // Garante que o VS Code reconheça as variáveis VITE_GEMINI_API_KEY
  ]
}